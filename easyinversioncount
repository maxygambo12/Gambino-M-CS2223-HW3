import java.util.*;
public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        int size = getArraySize(scanner);
        double[] arr = readArray(scanner, size);
        int inversionCount = countInversions(arr);
        displayResult(inversionCount);
        printInversionPairs(arr);
    }

    public static int getArraySize(Scanner scanner) {
        System.out.println("Enter array size: ");
        int size = scanner.nextInt();
        while (size <= 0) {
            System.out.println("Input a number (>0): ");
            size = scanner.nextInt();
        }
        return size;
    }

    public static double[] readArray(Scanner scanner, int size) {
        double[] arr = new double[size];
        System.out.println("Enter " + size + " numbers:");

        for (int i = 0; i < size; i++) {
            System.out.println("Element " + (i + 1) + ": ");
            arr[i] = scanner.nextDouble();
        }

        return arr;
    }

    public static int countInversions(double[] arr) {
        int count = 0;
        int n = arr.length;
        for (int i = 0; i < n - 1; i++) {
            for (int j = i + 1; j < n; j++) {
                if (arr[i] > arr[j]) {
                    count++;
                }
            }
        }

        return count;
    }

    public static void displayResult(int count) {
        System.out.println("Number of inversions: " + count);
    }

    public static void printInversionPairs(double[] arr) {
        System.out.println("Inversion pairs:");
        int n = arr.length;
        int pairCount = 0;
        for (int i = 0; i < n - 1; i++) {
            for (int j = i + 1; j < n; j++) {
                if (arr[i] > arr[j]) {
                    pairCount++;
                    System.out.println(pairCount + ": (" + arr[i] + ", " + arr[j] + ") at indices (" + i + ", " + j + ")");
                }
            }
        }
    }
}
